<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/UoNSport_gold"
    tools:context=".MainActivity">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:padding="2dp">

        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/stallcount8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:text="Stalling 8..."
                android:textColor="@color/white"
                android:textSize="20sp"
                app:backgroundTint="#065434" />

            <Button
                android:id="@+id/stallcount9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:text="Stalling 9..."
                android:textColor="@color/white"
                android:textSize="20sp"
                app:backgroundTint="@color/UoNSport_green" />

        </TableRow>

        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/stallcount6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:text="Stalling 6..."
                android:textColor="@color/white"
                android:textSize="20sp"
                app:backgroundTint="@color/UoNSport_green" />

            <Button
                android:id="@+id/stallcount7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:text="Stalling 7..."
                android:textColor="@color/white"
                android:textSize="20sp"
                app:backgroundTint="@color/UoNSport_green" />
        </TableRow>

        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/stallcount4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:text="Stalling 4..."
                android:textColor="@color/white"
                android:textSize="20sp"
                app:backgroundTint="@color/UoNSport_green" />

            <Button
                android:id="@+id/stallcount5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:text="Stalling 5..."
                android:textColor="@color/white"
                android:textSize="20sp"
                app:backgroundTint="@color/UoNSport_green" />
        </TableRow>

        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/stallcount2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:text="Stalling 2..."
                android:textColor="@color/white"
                android:textSize="20sp"
                app:backgroundTint="@color/UoNSport_green" />

            <Button
                android:id="@+id/stallcount3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:text="Stalling 3..."
                android:textColor="@color/white"
                android:textSize="20sp"
                app:backgroundTint="@color/UoNSport_green" />
        </TableRow>

        <Button
            android:id="@+id/stallcount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:text="Stalling 1..."
            android:textColor="@color/white"
            android:textSize="20sp"
            app:backgroundTint="@color/UoNSport_green" />

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>